{
  "name": "scroll",
  "displayName": "scroll",
  "publisher": "hot-potatoes",
  "description": "Assistant that helps to resolve errors",
  "icon": "images/scroll.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scroll",
          "title": "Scroll",
          "icon": "images/sidebar-scroll.svg"
        }
      ]
    },
    "views": {
      "scroll": [
        {
          "type": "webview",
          "id": "scroll.scrollview",
          "name": ""
        }
      ]
    },
    "commands": [
      {
        "command": "scroll.startNewSession",
        "title": "Start New Session",
        "icon": "$(add)"
      },
      {
        "command": "scroll.troubleshootFromSelection",
        "title": "Troubleshoot from selected text"
      },
      {
        "command": "scroll.troubleshootFromClipboard",
        "title": "Troubleshoot from the clipboard"
      }
    ],
    "keybindings": [
      {
        "command": "scroll.troubleshootFromSelection",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "scroll.troubleshootFromClipboard",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "scroll.startNewSession"
        }
      ],
      "view/title": [
        {
          "command": "scroll.startNewSession",
          "when": "view == scroll.scrollview",
          "group": "navigation@+"
        }
      ],
      "editor/context": [
        {
          "command": "scroll.troubleshootFromSelection",
          "when": "editorTextFocus && editorHasSelection"
        },
        {
          "command": "scroll.troubleshootFromClipboard",
          "when": "editorTextFocus"
        }
      ],
      "terminal/context": [
        {
          "command": "scroll.troubleshootFromSelection",
          "when": "terminal.active && terminal.visible"
        },
        {
          "command": "scroll.troubleshootFromClipboard",
          "when": "terminal.active && terminal.visible"
        }
      ]
    },
    "configuration": {
      "title": "Scroll Configuration",
      "properties": {
        "scroll.serverAddress": {
          "type": "string",
          "default": "https://e106-2a00-7c80-0-5f-00.ngrok-free.app",
          "description": "The address of the Scroll server"
        }
      }
    }
  },
  "scripts": {
    "build": "webpack --mode production",
    "compile": "tsc -p ./",
    "prepackage": "npm run compile && npm run build",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "file-loader": "^6.2.0",
    "markdown-to-jsx": "^7.5.0",
    "react-markdown": "^6.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-tooltip": "^5.28.0",
    "remark-gfm": "^4.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "webpack": "^5.93.0"
  }
}
